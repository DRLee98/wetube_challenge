mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                #jsPlayButton
                    i.fas.fa-play
                .volume#jsVolumeBox
                    span.volumeBtn#jsVolumeBtn
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range" min="0" max="1" step="0.1")
                .time
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
            input.videoPlayer__time#jsPlayTime(type="range" min="0" step="0.1" value="0")
            .videoPlayer__column
                #jsFullScreen
                    i.fas.fa-expand